{
  "version": 2,
  "builds": [
    {
      "src": "api/main.py",  // Updated path
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "buildCommand": "pip install --no-cache-dir -r requirements.txt"
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/main.py" // Updated path
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
